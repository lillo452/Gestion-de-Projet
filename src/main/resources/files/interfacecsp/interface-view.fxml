<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER_RIGHT" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.interfacecsp.InterfaceController">
    <VBox alignment="CENTER_RIGHT">
        <Button fx:id="resolutionButton" text="Resolution" onAction="#handleResolutionButtonAction" minHeight="50" />
        <Button fx:id="resetButton" text="Reset" onAction="#handleResetButtonAction" minHeight="50" />
        <Button fx:id="randomGridButton" text="Random Grid" onAction="#handleRandomGridButtonAction" minHeight="50" />
    </VBox>
    <padding>
        <Insets top="20" right="20" bottom="20" left="200" />
    </padding>

    <HBox>
        <padding>
            <Insets top="0" right="0" bottom="0" left="50" />
        </padding>
        <GridPane fx:id="sudokuGrid" hgap="2" vgap="2" VBox.vgrow="ALWAYS">
            <!-- To be completed with the Solver in java -->
        </GridPane>
    </HBox>
</VBox>